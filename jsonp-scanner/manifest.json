{
  "name": "Hello Extensions",
  "description" : "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  
  "action": {
    "default_popup": "/html/index.html"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens hello.html"
    }
  },

  "content_scripts":[{
    "matches":["<all_urls>"],
    "js":["js/index.js"]
  }]
}